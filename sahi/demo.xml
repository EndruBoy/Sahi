    <target name="proxyoff">
        <!--<win32.registry root="HKEY_CURRENT_USER" key="Software\Microsoft\Windows\CurrentVersion\">-->
        <!--<import subKey="Internet Settings">-->
        <!--<![CDATA[-->
        <!--<registry key="Software\Microsoft\Windows\CurrentVersion\Internet Settings" root="HKEY_CURRENT_USER">-->
        <!--<entry name="ProxyEnable" type="REG_DWORD" value="0"/>-->
        <!--</registry>-->
        <!--]]>-->
        <!--</import>-->
        <!--</win32.registry>-->
        <win32.registry root="HKEY_CURRENT_USER" key="Software\Microsoft\Windows\CurrentVersion">
            <delete subkey="Internet Settings" entry="ProxyEnable"/>
        </win32.registry>
    </target>
